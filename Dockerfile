FROM node:22.9.0

RUN apt-get update && apt-get install -y \
    ca-certificates \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libnspr4 \
    libnss3 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    xdg-utils \
    wget

WORKDIR /usr/src/redirection_checker

COPY package*.json ./
RUN npm install

RUN npx puppeteer browsers install chrome

COPY . .

CMD [ "tail", "-f", "/dev/null" ]
